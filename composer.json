{
    "name": "homm/hommsitemap",
    "description": "Craft 3 plugin that provides an easy way to provide and manage a XML sitemap for search engines like Google and Bing",
    "type": "craft-plugin",
    "version": "1.1.4",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "sitemap",
        "seo",
        "sitemap.xml",
        "webmaster tools"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Homm",
            "email": "mail@homm.ch",
            "homepage": "https://homm.ch/"
        }
    ],
    "require": {
        "craftcms/cms": "^3.0.0-RC11",
        "jaybizzle/crawler-detect": "1.*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
          "homm\\hommsitemap\\": "src/"
        }
    },
    "extra": {
        "name": "XML Sitemap Homm",
        "handle": "sitemap",
        "schemaVersion": "1.1.4",
        "developer": "Homm",
        "developerUrl": "https://homm.ch/",
        "hasCpSettings": true,
        "hasCpSection": false,
        "components": {
            "sitemapService": "homm\\hommsitemap\\services\\SitemapService"
        },

        "class": "homm\\hommsitemap\\Sitemap"
    }
}
